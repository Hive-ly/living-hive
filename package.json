{
  "name": "@hively/living-hive",
  "version": "0.4.0",
  "description": "A React library for visualizing interconnected stories using UMAP and hex grid layouts",
  "type": "module",
  "main": "./dist/living-hive-react.umd.cjs",
  "module": "./dist/living-hive-react.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/living-hive-react.js",
      "require": "./dist/living-hive-react.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./workers/umap-placement.worker": {
      "import": "./dist/workers/umap-worker.js",
      "types": "./dist/workers/umap-placement.worker.d.ts"
    },
    "./workers/umap-worker": {
      "import": "./dist/workers/umap-worker.js"
    },
    "./workers/umap-worker.js": {
      "import": "./dist/workers/umap-worker.js"
    },
    "./workers/*": "./dist/workers/*"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiv-ely/living-hive.git"
  },
  "bugs": {
    "url": "https://github.com/hive-ly/living-hive/issues"
  },
  "homepage": "https://github.com/hive-ly/living-hive#readme",
  "scripts": {
    "dev": "vite",
    "build:worker": "vite build --config vite.worker.config.ts",
    "build:library": "tsc && vite build --mode library",
    "build": "npm run build:worker && npm run build:library",
    "build:examples": "vite build",
    "prepare": "npm run build",
    "preversion": "npm run build && npm test",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,scss}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css,scss}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "regenerate-embeddings": "tsx scripts/regenerate-embeddings.ts",
    "regenerate-themes": "tsx scripts/regenerate-themes.ts",
    "fetch-stories": "tsx scripts/fetch-reddit-stories.ts",
    "version:patch": "npm version patch --git-tag-version true",
    "version:minor": "npm version minor --git-tag-version true",
    "version:major": "npm version major --git-tag-version true",
    "postversion": "git push --follow-tags"
  },
  "keywords": [
    "react",
    "visualization",
    "umap",
    "hex-grid",
    "stories",
    "embeddings"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-popover": "^1.0.7",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sonner": "^1.4.0",
    "tailwind-merge": "^2.0.0",
    "umap-js": "^1.3.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-vitest": "^0.4.1",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.3.2",
    "tsx": "^4.7.0",
    "typescript": "~5.5.4",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^1.6.0"
  }
}
